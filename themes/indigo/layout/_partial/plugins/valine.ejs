            serverURLs: "https://blog.jhmjjx.cn",
            appId: "lhy1Br6kw57E0e9bTvX5wM92",
            appKey: "3aZ5erS4atavTot3qx7xpgoK",
            avatar: "https://jianghushinian.cn/img/avatar.png",
            placeholder: "请输入您的评论内容...",
            guest_info: guest_info.length == 0 ? GUEST_INFO : guest_info,
            pageSize: "20"
        })
    </script>
    <!-- Valine Comments end -->
<% } %>
